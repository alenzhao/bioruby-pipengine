#!/usr/bin/env ruby

require 'optparse'
$:<< File.expand_path(File.join(File.dirname(File.dirname __FILE__),"lib"))
require 'bio-pipengine'

options = {}
optparse = OptionParser.new do |opts|
	opts.banner = "\n\nLauncher for Complex Biological Pipelines . Copyright(C) 2012 Francesco Strozzi\n"
	opts.on("-a","--analysis FILE","YAML file with analysis and sample details") do |file|
		options[:analysis] = file
	end
  opts.on("-h","--help","Display this screen") do
		puts opts
		print "\n"
	end
end

optparse.parse!

raise OptionParser::MissingArgument,"-a, --analysis FILE\n" if options[:analysis].nil?

